    "paths": {
        "/auth/signup": {
            "post": {
                "description": "Create an account",
                "tags": [
                    "Authentication"
                ],
                "produces": [
                    "application/json"
                ],
                "consumes": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "user",
                        "description": "user email and password",
                        "in": "body",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "email": {
                                    "type": "string",
                                    "example": "fabm@mail.com"
                                },
                                "password": {
                                    "type": "string",
                                    "example": "Fabm@123"
                                }
                            }
                        },
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "500": {
                        "description": "User already exists"
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "description": "Login with valid credentials",
                "tags": [
                    "Authentication"
                ],
                "parameters": [
                    {
                        "name": "user",

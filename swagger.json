                                },
                                "password": {
                                    "type": "string",
                                    "example": "Fabm@123"
                                }
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }},

        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "comment",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "commenterName": {
                  "type": "string",
                  "example": "Vicky"
                },
                "commenterEmail": {
                  "type": "string",
                  "example": "pishimweaime7@gmail.com"
                },
                "text": {
                  "type": "string",
                  "example": "hi"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal server"
          }
        }
      },
